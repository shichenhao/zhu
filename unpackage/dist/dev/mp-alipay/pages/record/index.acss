.segmented-control {
  width: 100%;
  border-radius: 0;
  border: 0 none;
  background: #fff;
}
.segmented-control .segmented-control-item {
  height: 40px;
  line-height: 40px;
  border: 0 none;
  background: #fff;
}
.orderBox {
  background: #eee;
  min-height: 100vh;
}
.orderCont .orderNone {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  height: 400px;
}
.orderCont .orderItem {
  font-size: 14px;
  line-height: 22px;
  border-top: 1px solid #ccc;
  background: #fff;
  padding: 5px 10px;
  margin-top: 10px;
  position: relative;
}
.orderCont .orderItem .orderName {
  font-size: 16px;
  font-weight: bold;
}
.orderCont .orderItem .orderDes {
  color: #666;
}
.orderCont .orderItem .orderTime {
  color: #999;
}
.orderCont .orderItem .orderPrice {
  color: #CE3C39;
}
.orderCont .orderItem .orderPrice .state {
  margin-left: 20px;
  color: #999;
}
.orderCont .orderItem:after {
  content: ">";
  color: #999;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  right: 20px;
  top: 0;
  bottom: 0;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

